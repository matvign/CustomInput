<?xml version="1.0" encoding="utf-8"?>
<layout onVolumeUp="scroll_up" onVolumeDown="scroll_down">
  <grid>
    <row>
			<touch id="touch" 
				ontap="tap"
				onhold="hold" 
				onup="onup" 
				ontouchstart="touchstart"
				ontouchend="touchend"
				ontouchdelta="delta" />
	  </row>
		<row weight="wrap">
			<button id="lButton" text="L" ontap="leftClick" onhold="hold" onup="clickDrop" />
			<button id="rButton" text="R" ontap="rightClick" />
	  </row>
  </grid>
</layout>
